<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Meeting Info"
            android:textColor="#fff"
            android:textSize="28sp"
            android:textStyle="bold"
            />
    </android.support.v7.widget.Toolbar>

    <ImageButton
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:id="@+id/imageButton"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/toolbar"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/chat_bubble" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageButton"
        android:layout_marginStart="32dp"
        android:text="Name of meeting"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/dateForm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView6"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="10dp"
        android:text="Date"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"/>

    <EditText
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/dateForm"
        android:layout_below="@+id/dateForm"
        android:layout_toStartOf="@+id/imageButton"
        android:ems="10"
        android:inputType="date" />

    <TextView
        android:id="@+id/timeForm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/date"
        android:layout_below="@+id/date"
        android:layout_marginTop="8dp"
        android:text="Time"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"/>

    <EditText
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/timeForm"
        android:layout_below="@+id/timeForm"
        android:layout_toStartOf="@+id/imageButton"
        android:ems="10"
        android:inputType="date" />

    <TextView
        android:id="@+id/costForm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/time"
        android:layout_below="@+id/time"
        android:layout_marginTop="8dp"
        android:text="Cost"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"/>

    <EditText
        android:id="@+id/cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/costForm"
        android:layout_below="@+id/costForm"
        android:layout_toStartOf="@+id/imageButton"
        android:ems="10"
        android:inputType="date" />

    <TextView
        android:id="@+id/organizerForm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/cost"
        android:layout_below="@+id/cost"
        android:layout_marginTop="8dp"
        android:text="Organizer"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"/>

    <EditText
        android:id="@+id/organizer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/organizerForm"
        android:layout_below="@+id/organizerForm"
        android:layout_toStartOf="@+id/imageButton"
        android:ems="10"
        android:inputType="date" />

    <TextView
        android:id="@+id/topicForm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/organizer"
        android:layout_below="@+id/organizer"
        android:layout_marginTop="8dp"
        android:text="Topic"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"/>

    <EditText
        android:id="@+id/topic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/topicForm"
        android:layout_below="@+id/topicForm"
        android:layout_toStartOf="@+id/imageButton"
        android:ems="10"
        android:inputType="date" />


</RelativeLayout>