<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Create Meeting"
            android:textColor="#fff"
            android:textSize="28sp"
            android:textStyle="bold"
            />
    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toolbar"
        android:layout_marginStart="36dp"
        android:layout_marginTop="63dp"
        android:textSize="17dp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:text="Name" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/edit_Location"
        android:layout_toStartOf="@+id/edit_name"
        android:text="Location"
        android:textColor="@android:color/black"
        android:textSize="17dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView5"
        android:layout_marginBottom="39dp"
        android:layout_toStartOf="@+id/edit_name"
        android:text="When"
        android:textColor="@android:color/black"
        android:textSize="17dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/TextView_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/edit_Location"
        android:layout_alignEnd="@+id/textView"
        android:layout_marginBottom="22dp"
        android:text="Cost"
        android:textColor="@android:color/black"
        android:textSize="17dp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView"
        android:layout_alignTop="@+id/edit_about"
        android:text="About"
        android:textColor="@android:color/black"
        android:textSize="17dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edit_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/TextView_cost"
        android:layout_marginStart="22dp"
        android:layout_toEndOf="@+id/textView5"
        android:background="@drawable/border"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/edit_Location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/dateMeeting"
        android:layout_alignStart="@+id/edit_name"
        android:layout_marginBottom="23dp"
        android:background="@drawable/border"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/edit_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/edit_Location"
        android:layout_alignTop="@+id/textView3"
        android:background="@drawable/border"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/edit_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/edit_name"
        android:layout_alignTop="@+id/textView"
        android:background="@drawable/border"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/edit_about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_enroll"
        android:layout_alignEnd="@+id/timeMeetind"
        android:layout_marginBottom="26dp"
        android:background="@drawable/border"
        android:ems="10"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:lines="5"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btn_enroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/edit_about"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:background="@android:color/transparent"
        android:text="Enroll" />

    <TextView
        android:id="@+id/dateMeeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignStart="@+id/edit_Location"
        android:layout_marginStart="12dp"
        android:text="날짜(datePicker)" />

    <TextView
        android:id="@+id/timeMeetind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/dateMeeting"
        android:layout_alignBottom="@+id/dateMeeting"
        android:layout_alignEnd="@+id/edit_Location"
        android:text="시간(timePicker)" />


</RelativeLayout>