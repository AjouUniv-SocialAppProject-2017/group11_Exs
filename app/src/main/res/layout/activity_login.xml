<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/edit_id"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView7"
        android:layout_marginStart="13dp"
        android:layout_marginTop="49dp"
        android:layout_toEndOf="@+id/imageView12"
        android:ems="10"
        android:hint="ID"
        android:inputType="textPersonName"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edit_password"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/edit_id"
        android:layout_alignStart="@+id/edit_id"
        android:layout_below="@+id/edit_id"
        android:layout_marginTop="26dp"
        android:ems="10"
        android:hint="PW"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/login"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:background="@drawable/box"
        android:text="Login" />

    <Button
        android:id="@+id/snbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/login"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="43dp"
        android:background="@android:color/transparent"
        android:text="sign up" />


    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView8"
        android:layout_alignParentTop="true"
        android:layout_marginTop="67dp"
        android:text="L.T.E"
        android:textColor="#C24759"
        android:textSize="40sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_above="@+id/edit_password"
        android:layout_alignStart="@+id/login"
        app:srcCompat="@drawable/email" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/edit_password"
        android:layout_toStartOf="@+id/edit_id"
        app:srcCompat="@drawable/pw" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true"
        android:text="(Local To Exchange)"
        android:textStyle="italic"
        android:textColor="#C24759"/>

    <ImageView
        android:id="@+id/imageView17"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_above="@+id/edit_id"
        android:layout_marginBottom="11dp"
        android:layout_marginEnd="12dp"
        android:layout_toStartOf="@+id/textView7"
        app:srcCompat="@drawable/logo" />


</RelativeLayout>