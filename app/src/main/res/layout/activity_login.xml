<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Login"
            android:textColor="#fff"
            android:textSize="28sp"
            android:textStyle="bold"
            />
    </android.support.v7.widget.Toolbar>

    <EditText
        android:id="@+id/edit_id"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/googleSignUpBtn"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="46dp"
        android:ems="10"
        android:hint="ID"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/edit_password"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/edit_id"
        android:layout_alignStart="@+id/edit_id"
        android:layout_below="@+id/edit_id"
        android:layout_marginTop="26dp"
        android:ems="10"
        android:hint="PW"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/login"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/edit_password"
        android:layout_below="@+id/edit_password"
        android:layout_marginTop="23dp"
        android:background="@drawable/box"
        android:text="Login" />

    <Button
        android:id="@+id/snbutton"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/googleSignUpBtn"
        android:layout_below="@+id/googleSignUpBtn"
        android:layout_marginTop="34dp"
        android:background="#00ff0000"
        android:text="sign up" />

    <com.google.android.gms.common.SignInButton

        android:id="@+id/googleSignUpBtn"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="14dp" />



</RelativeLayout>