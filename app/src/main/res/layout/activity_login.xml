<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/edit_id"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView7"
        android:layout_marginStart="13dp"
        android:layout_marginTop="49dp"
        android:layout_toEndOf="@+id/imageView12"
        android:ems="10"
        android:hint="ID"
        android:inputType="textPersonName"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edit_password"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/edit_id"
        android:layout_alignStart="@+id/edit_id"
        android:layout_below="@+id/edit_id"
        android:layout_marginTop="26dp"
        android:ems="10"
        android:hint="PW"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/login"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:background="@drawable/box"
        android:text="Login" />

    <Button
        android:id="@+id/snbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/googleSignUpBtn"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="12dp"
        android:background="@drawable/box"
        android:text="sign up" />

    <com.google.android.gms.common.SignInButton

        android:id="@+id/googleSignUpBtn"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="14dp" />

    <TextView
        android:id="@+id/textView6"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:text="Or" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="82dp"
        android:text="L.T.E"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="40sp"/>

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_above="@+id/edit_password"
        android:layout_alignStart="@+id/login"
        app:srcCompat="@drawable/email" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/edit_password"
        android:layout_toStartOf="@+id/edit_id"
        app:srcCompat="@drawable/pw" />


</RelativeLayout>