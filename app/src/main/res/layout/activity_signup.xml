<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#C24759"
        android:minHeight="?attr/actionBarSize"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Sign up"
            android:textColor="#fff"
            android:textSize="28sp"
            android:textStyle="bold"
            />
    </android.support.v7.widget.Toolbar>

    <EditText
        android:id="@+id/id"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/signupBtn"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="95dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/password"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/id"
        android:layout_below="@+id/id"
        android:layout_marginTop="17dp"
        android:ems="10"
        android:hint="PW"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/rePassword"
        android:layout_width="270dp"
        android:layout_height="wrap_content"

        android:layout_alignStart="@+id/password"
        android:layout_below="@+id/password"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Re-enter PW"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/signupBtn"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rePassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:background="@drawable/box"
        android:text="Sign up" />

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_above="@+id/password"
        android:layout_alignStart="@+id/signupBtn"
        app:srcCompat="@drawable/email" />

    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_above="@+id/rePassword"
        android:layout_alignStart="@+id/imageView14"
        app:srcCompat="@drawable/pw" />

    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/rePassword"
        android:layout_alignEnd="@+id/imageView15"
        app:srcCompat="@drawable/confirm" />
</RelativeLayout>
