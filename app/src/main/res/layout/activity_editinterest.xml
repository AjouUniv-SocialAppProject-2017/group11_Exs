<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#C24759"
        android:minHeight="?attr/actionBarSize"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Edit Interest"
            android:textColor="#fff"
            android:textSize="28sp"
            android:textStyle="bold" />
    </android.support.v7.widget.Toolbar>

    <ImageButton
        android:id="@+id/btn_cook"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txv_music"
        android:layout_marginStart="12dp"
        android:layout_marginTop="112dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/cook" />

    <ImageButton
        android:id="@+id/btn_religion"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/btn_cook"
        android:layout_toEndOf="@+id/btn_cook"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/religion" />

    <ImageButton
        android:id="@+id/btn_movie"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/btn_religion"
        android:layout_toEndOf="@+id/btn_religion"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/movie" />

    <ImageButton
        android:id="@+id/btn_trip"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/btn_movie"
        android:layout_toEndOf="@+id/btn_study"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/tour" />

    <ImageButton
        android:id="@+id/btn_pet"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/btn_trip"
        android:layout_toEndOf="@+id/btn_art"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/pet" />

    <ImageButton
        android:id="@+id/btn_music"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignStart="@+id/btn_cook"
        android:layout_below="@+id/btn_cook"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="37dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/music" />

    <ImageButton
        android:id="@+id/btn_food"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/btn_music"
        android:layout_marginHorizontal="3dp"
        android:layout_toEndOf="@+id/btn_music"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/food" />

    <ImageButton
        android:id="@+id/btn_study"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/btn_food"
        android:layout_marginHorizontal="3dp"
        android:layout_toEndOf="@+id/btn_food"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/study" />

    <ImageButton
        android:id="@+id/btn_art"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/btn_study"
        android:layout_marginHorizontal="5dp"
        android:layout_toEndOf="@+id/btn_study"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/art" />

    <ImageButton
        android:id="@+id/btn_etc"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/btn_art"
        android:layout_marginHorizontal="5dp"
        android:layout_toEndOf="@+id/btn_art"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:srcCompat="@drawable/etc" />

    <Button
        android:id="@+id/btn_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/txv_etc"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="23dp"
        android:background="@drawable/box"
        android:text="EDIT" />

    <TextView
        android:id="@+id/txv_cook"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toolbar"
        android:layout_marginStart="31dp"
        android:layout_marginTop="47dp"
        android:background="@drawable/box"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:paddingHorizontal="10dp"
        android:text="#Cook"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txv_religion"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/txv_cook"
        android:layout_toEndOf="@+id/txv_cook"
        android:background="@drawable/box"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:paddingHorizontal="10dp"
        android:text="#Religion"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txv_movie"
        android:layout_width="60dp"
        android:layout_height="30dp"

        android:layout_toEndOf="@+id/txv_religion"
        android:background="@drawable/box"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:paddingHorizontal="5dp"
        android:text="#Movie"
        android:layout_alignTop="@+id/txv_cook"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txv_trip"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_toEndOf="@+id/txv_movie"
        android:background="@drawable/box"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:paddingHorizontal="10dp"
        android:text="#Trip"
        android:layout_alignTop="@+id/txv_cook"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txv_pet"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_toEndOf="@+id/txv_trip"
        android:background="@drawable/box"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:paddingHorizontal="10dp"
        android:text="#Pet"
        android:layout_alignTop="@+id/txv_cook"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txv_music"
        android:layout_width="65dp"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/txv_cook"
        android:layout_below="@+id/txv_cook"
        android:layout_marginTop="21dp"
        android:background="@drawable/box"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:paddingHorizontal="10dp"
        android:text="#Music"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txv_food"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/txv_music"
        android:layout_toEndOf="@+id/txv_music"
        android:background="@drawable/box"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:paddingHorizontal="10dp"
        android:text="#Food"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txv_study"
        android:layout_width="65dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/txv_food"
        android:layout_toEndOf="@+id/txv_food"
        android:background="@drawable/box"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:paddingHorizontal="10dp"
        android:text="#Study"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txv_art"
        android:layout_width="65dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/txv_study"
        android:layout_toEndOf="@+id/txv_study"
        android:background="@drawable/box"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:paddingHorizontal="10dp"
        android:text="#Art"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txv_etc"
        android:layout_width="65dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/txv_art"
        android:layout_toEndOf="@+id/txv_art"
        android:background="@drawable/box"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:paddingHorizontal="10dp"
        android:text="#Etc"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_religion"
        android:layout_alignStart="@+id/txv_music"
        android:layout_marginBottom="37dp"
        android:text="Please click 5 interest!"
        android:textColor="@android:color/black"
        android:textSize="15dp"/>

</RelativeLayout>